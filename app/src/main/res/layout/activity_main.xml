<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.lavor.android40newcontrols.MainActivity">

    <Switch
        android:id="@+id/_switch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textOff="关闭"
        android:textOn="打开" />

    <android.support.v4.widget.Space
        android:layout_width="match_parent"
        android:layout_height="60dp" />

    <GridLayout
        android:id="@+id/grid_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:rowCount="2">

        <Button
            android:onClick="openPopupMenu"
            android:text="打开PopupMenu" />

        <Button
            android:onClick="rotate0"
            android:text="TextureView不旋转" />

        <Button
            android:onClick="rotate45"
            android:text="TextureView旋转45度" />

        <Button
            android:onClick="rotate90"
            android:text="TextureView旋转90度" />
    </GridLayout>

    <TextureView
        android:id="@+id/texture_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </TextureView>
</LinearLayout>
